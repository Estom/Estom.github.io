    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python数据处理 (.venv)",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "env": {
                "HF_ENDPOINT": "https://hf-mirror.com"
            },
            "args": "--verbose --git-batch=true --tag-count=0 --tag-method=keybert"
        },
        {
            "name": "Python数据同步 (.venv)",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "env": {
                "HF_ENDPOINT": "https://hf-mirror.com"
            },
            "args": "--verbose"
        },
        {
            "name": "Python数据处理 (uv run + attach)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "preLaunchTask": "uv: run hexo-proc with debugpy",
            "justMyCode": true
        }
    ]
}