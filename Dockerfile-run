# syntax=docker/dockerfile:1

# Build stage uses a prebuilt base image:
#   - Node.js 22
#   - Python 3.12
#   - uv
#
ARG BASE_IMAGE=ghcr.io/estom/hexo-blog:build-v1.0.0

# Source stage: consume the prebuilt build image which already contains
# the generated static site in /app/public.
FROM ${BASE_IMAGE} AS build

FROM nginx:1.27-alpine AS runtime

# Static site output from Hexo
COPY --from=build /app/public/ /usr/share/nginx/html/

# Required by user request: runtime starts via start.sh
COPY --from=build /app/start.sh /start.sh
RUN chmod +x /start.sh

EXPOSE 80
CMD ["/start.sh"]
